{
    "manifest_version": 2,
    "name": "Better-Scrollbar",
    "version": "1.0",
    "description": "An elegant scrollbar, for a more civilized age",
    // "icons": {
    // "128": "icon_128.png"
    // },
    "browser_action": {
        // "default_icon": "icon.png",
        // "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage",
        "<all_urls>"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "style.css"
            ]
        }
    ]
}
